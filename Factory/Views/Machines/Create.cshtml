@{
  Layout = "_Layout";
}
@model Factory.Models.Machine

<h4>Add a new machine to the index</h4>

<p><strong>NOTE: </strong>Machine's name field cannot be left empty.</p>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>


@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  <input type="submit" value="Add new machine" class="btn btn-primary" />
}

<p>@Html.ActionLink("To machine index", "Index")</p> 