@{
  Layout = "_Layout";
}

@model Factory.Models.Machine
@using Factory.Models

<p><strong>NOTE:</strong> You need to have at least one engineer added to the index first!</p>

<h4>Add an engineer to this machine: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to machine index", "Index")</p>